{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "gitAuthor": "RKIMetadataExchange <mex@rki.de>",
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "pin",
                "digest",
                "patch",
                "minor",
                "major",
                "lockFileMaintenance"
            ],
            "minimumReleaseAge": "7 days"
        }
    ],
    "platform": "github",
    "repositories": [
        "robert-koch-institut/mex-common"
    ]
}
